<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.tealium.kitchensink.fragment.WidgetClickableFragment">

    <LinearLayout
        style="@style/tealium_list"
        android:gravity="center_horizontal">

        <Button
            android:id="@+id/widget_clickable_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:text="@string/widget_clickable_button_text" />

        <ImageButton
            android:id="@+id/widget_clickable_imagebutton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/tealium_logo" />

    </LinearLayout>

</ScrollView>

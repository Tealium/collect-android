<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="1dp"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/explist_child_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/label_padding"
        android:layout_weight="1"
        style="@style/tealium_label" />

    <Button
        android:id="@+id/cell_widget_explist_child_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minHeight="50dp"
        android:layout_weight="0"
        android:text="@string/widget_clickable_button_text"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp" />

    <CheckBox
        android:id="@+id/cell_widget_explist_child_checkbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/widget_checkable_checkbox_text"
        android:paddingTop="@dimen/label_padding"
        android:paddingLeft="@dimen/checkbox_padding_left"
        android:paddingRight="@dimen/label_padding"
        android:minHeight="50dp"
        android:paddingBottom="@dimen/label_padding"
        android:layout_weight="0"
        style="@style/tealium_label" />


</LinearLayout>
